<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Liczniki.AddCounterPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Dodaj nowy licznik" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center"/>

        <Entry x:Name="CounterNameEntry" Placeholder="Nazwa licznika" WidthRequest="200" HorizontalOptions="Center"/>

        <Button Text="Dodaj licznik" Clicked="OnAddCounterClicked" HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>
